<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HoursGridViewActivity" >

    
    	            <Button
                    android:id="@+id/submit_times"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="Submit" />
    
        <TextView
            android:id="@+id/week_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/submit_times"
            android:text="Week of April 19th"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <GridView
            android:id="@+id/hours_gridView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_below="@+id/week_text"
            android:layout_centerHorizontal="true"
            android:columnWidth="100dp"
            android:gravity="center"
            android:numColumns="7"
            android:stretchMode="columnWidth" >
        </GridView>

        <TextView
            android:id="@+id/next_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/week_text"
            android:layout_alignRight="@+id/hours_gridView"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:text=">>"
            android:textSize="14sp"
            android:textStyle="bold" />
        
                <TextView
            android:id="@+id/previous_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/week_text"
            android:layout_alignLeft="@+id/hours_gridView"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:text="&lt;&lt;"
            android:textSize="14sp"
            android:textStyle="bold" />


        
    </RelativeLayout>

